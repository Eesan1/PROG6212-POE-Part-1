<Window x:Class="CMCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Dashboard" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#2C3E50" VerticalAlignment="Stretch">
            <Button Content="Submit A New Claim" Foreground="White" Background="#34495E" Margin="10,20,10,10" Height="40" Click="SubmitClaim_Click"/>
            <Button Content="View Pending Claims" Foreground="White" Background="#34495E" Margin="10,0,10,10" Height="40" Click="ViewCoordinatorManagerClaims_Click"/>
            <Button Content="View All Claims" Foreground="White" Background="#34495E" Margin="10,0,10,10" Height="40" Click="ViewClaims_Click"/>
            <Button Content="Log Out" Foreground="White" Background="#34495E" Margin="10,0,10,10" Height="40" Click="LogOut_Click"/>
        </StackPanel>

        <ContentControl Grid.Column="1" x:Name="MainContent"/>
    </Grid>
</Window>
